<p id="notice"><%= notice %></p>

<h1>Receipts</h1>

<table>
  <thead>
    <tr>
      <th>No</th>
      <th>Billing date</th>
      <th>customer_name</th>
      <th>Price</th>
      <th>Proviso</th>
      <th>Issuer name</th>
      <th>Issuer address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.no %><br><%= link_to receipt.uuid, download_path(uuid: receipt.uuid) %></td>
        <td><%= receipt.billing_date %></td>
        <td><%= receipt.customer_name %></td>
        <td><%= receipt.price %></td>
        <td><%= receipt.proviso %></td>
        <td><%= receipt.issuer_name %></td>
        <td><%= receipt.issuer_address %></td>
        <td><%= link_to 'Show', receipt %></td>
        <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
        <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Receipt', new_receipt_path %>
